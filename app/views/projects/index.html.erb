<h3>Projekte</h3>

<p><%= link_to "Neues Projekt anlegen", new_project_path %></p>

<table>
	<tr>
		<th>Titel</th>
		<th>Beschreibung</th>
		<th>Datum</th>
		<th colspan="4"></th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	
	<% @projects.each do |p| %>
		<tr>
			<td><%= p.title %></td>
			<td><%= p.description %></td>
			<td><%= p.start_date %></td>
			<td><%= link_to "tasks", project_tasks_path(p.id) %></td>
			<td><%= link_to "Edit", edit_project_path(p.id) %></td>
			<td><%= link_to "Show", project_path(p.id) %></td>
			<td><%= link_to "Delete", project_path(p.id), method: :delete, data: {confirm: "Sicher???"} %></td>
		</tr>
	<% end %>
	
</table>